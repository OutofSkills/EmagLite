<MudTable ServerData="@(new Func<TableState, Task<TableData<User>>>(ServerReload))" SortLabel="Sort By" Dense="true" Hover=@hover @ref="table" @bind-SelectedItems="selectedItems" MultiSelection=@multiSelect
          Loading="@loading">
